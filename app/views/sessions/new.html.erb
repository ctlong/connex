<div class="authentication">
  <%= render 'navbar', logged_in: false %>

  <section class="text-center">
    <h1>Log In</h1>
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <p class="error">* <%= message %></p>
      <% end %>
    <% end %>
    <div class="container">
      <div class="row">
        <%= form_for(:user, url: login_path, html: { class: "form-horizontal col-sm-12" }) do |f| %>
          <div class="form-group">
            <label for="inputUsername" class="col-sm-3 col-sm-offset-2 control-label">Username</label>
            <div class="col-sm-3">
              <%= f.text_field :username, required: true, class: "form-control",
              id: "inputUsername", placeholder: "Username" %>
            </div>
          </div>

          <div class="form-group">
            <label for="inputPassword" class="col-sm-3 col-sm-offset-2 control-label">Password</label>
            <div class="col-sm-3">
              <%= f.password_field :password, required: true, class: "form-control",
              id: "inputPassword", placeholder: "Password" %>
            </div>
          </div>

          <button type="submit" class="btn btn-default">Submit</button>
        <% end %>
      </div>
    </div>
  </section>
</div>
