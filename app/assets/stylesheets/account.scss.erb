.account {
  section {
    background: url(<%= asset_path "bg-pattern-light" %>), #51005A; /* For browsers that do not support gradients */
    background: url(<%= asset_path "bg-pattern-light" %>), -webkit-radial-gradient(#51005A 50%, #70007c); /* For Safari 5.1 to 6.0 */
    background: url(<%= asset_path "bg-pattern-light" %>), -o-radial-gradient(#51005A 50%, #70007c); /* For Opera 11.1 to 12.0 */
    background: url(<%= asset_path "bg-pattern-light" %>), -moz-radial-gradient(#51005A 50%, #70007c); /* For Firefox 3.6 to 15 */
    background: url(<%= asset_path "bg-pattern-light" %>), radial-gradient(#51005A 50%, #70007c); /* Standard syntax */

    min-height: 600px;

    @media (max-width: 768px) {
      min-height: 600px;
    }

    h1 {
      padding-top: 100px;
      padding-bottom: 30px;
      margin: 0;
      color: white;
      font-weight: 300;
    }

    .display-info {
      color: white;
      font-size: 18px;
      font-weight: 300;
      margin-bottom: 12px;

      label {
        text-align: right;
        font-size: 18px;
        font-weight: 400;
      }

      p {
        margin-bottom: 5px;
      }

      a {
        color: white;
      }
      a:hover {
        color: #f4b841;
      }

      @media (max-width: 768px) {
        label {
          font-size: 14px;
        }

        p {
          font-size: 14px;
        }
      }
    }

    .btn {
      width: 150px;
      margin-top: 15px;
      font-size: 11pt;
      background-color: white; 
      opacity: 0.75;
      color: #51005A;
      font-weight: bold;
      border-color: white;
      transition: 0.3s ease;

      @media (max-width: 768px) {
        width: 120px;
        font-size: 9pt;
      }
    }

    .btn:hover {
      opacity: 1.0;
      border-color: #51005A;
      transform: scale(1.1, 1.1);
    }

    #first_button {
      text-align: right;
    }

    #second_button {
      text-align: left;
    }

    .url-share {
      margin-top: 20px;
      margin-bottom: 20px;
      color: white;

      a {
        color: #f4b841;
      }

      p {
        margin-bottom: 0;
      }
    }

    .conversion {
      margin-top: 20px;
      margin-bottom: 20px;
      color: white;

      p {
        margin-bottom: 0;
      }

      .btn {
        margin-top: 4px;
      }
    }
  }
}