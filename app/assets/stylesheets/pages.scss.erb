#home {
  header {
    height: 676px;
    color: white;

    background-image: url(<%= asset_path 'header.png' %>);

    @media (max-width: 992px) {
      background-image: url(<%= asset_path 'header-sm.png' %>);
    }

    .header-content {
      margin-top: 300px;
      margin-left: 10%;

      @media (max-width: 768px) {
        margin-top: 310px;
        margin-left: 5%;
      }

      h1 {
        margin-bottom: 0;
        font-weight: 300;
        font-size: 43px;

        @media (max-width: 992px) {
          font-size: 34px;
        }
      }

      h3 {
        margin-top: 5px;
        font-weight: 300;

        @media (max-width: 992px) {
          font-size: 19px;
        }
      }

      a {
        width: 155px;
        height: 46px;
        padding-top: 13px;
        margin-top: 10px;
        opacity: 0.8;
        border-radius: 20px;
        color: #51005A;
        font-size: 15px;

        @media (max-width: 992px) {
          width: 145px;
          height: 43px;
          padding-top: 11px;
        }
      }
    }
  }

  #how_it_works {
    background: url(<%= asset_path 'bg-pattern.png' %>), #e8e8e8;
    color: #51005A;

    img {
      max-width: 100%;
    }

    h2 {
      font-weight: bold;
      margin-top: 0;
      padding-top: 30px;
      font-size: 50px;
    }

    h3 {
      font-weight: bold;
      padding-left: 30px;
      padding-right: 30px;
    }

    .arrow {
      position: absolute;
      top: 140%;
      height: 100px;
      max-width: 100%;
    }

    #arrow1 {
      left: 31%;
    }

    #arrow2 {
      left: 62%;
    }

    .centered {
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }
}
