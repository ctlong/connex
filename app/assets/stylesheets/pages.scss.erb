#home {
  nav {
    border-radius: 0;
    opacity: 0.8; 
    color: #51005A;

    .navbar-header {
      img {
        height: 25px;
      }
      img:hover {
        cursor: pointer;
      }
    }
  }

  header {
    height: 676px;
    color: white;

    background-image: url(<%= asset_path 'header.png' %>);

    @media (max-width: 992px) {
      background-image: url(<%= asset_path 'header-sm.png' %>);
    }

    .header-content {
      margin-top: 300px;
      margin-left: 10%;

      @media (max-width: 768px) {
        margin-top: 310px;
        margin-left: 5%;
      }

      h1 {
        margin-bottom: 0;
        font-weight: 300;
        font-size: 43px;

        @media (max-width: 992px) {
          font-size: 34px;
        }
      }

      h3 {
        margin-top: 5px;
        font-weight: 300;

        @media (max-width: 992px) {
          font-size: 19px;
        }
      }

      a {
        width: 155px;
        height: 46px;
        padding-top: 13px;
        margin-top: 10px;
        opacity: 0.8;
        border-radius: 20px;
        color: #51005A;
        font-size: 15px;

        @media (max-width: 992px) {
          width: 145px;
          height: 43px;
          padding-top: 11px;
        }
      }
    }
  }

  #how_it_works {
    .arrow {
      height: 100px;
      max-width: 100%;
    }
  }
}
